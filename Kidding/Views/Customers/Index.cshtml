@model IEnumerable<Kidding.Models.CustomerViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th>Customer</th>
        <th>Discount Rate</th>
        
    </tr>
    @if(!Model.Any())
    {
    <h1>We Dont have Customers Yet!</h1>
    }
    else
    {
    
        foreach (var item in Model) {

   
     <tr>
         <td>@Html.ActionLink(item.Name, "Details", "Customers", new {id = item.Id}, null)</td>
         <td>@item.MembershipType.DiscountRate%</td>
        
     </tr>
 }
    }



</table>
