@model IEnumerable<Kidding.Models.MovieViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th>Movie</th>
        
    </tr>

    @if(!Model.Any())
    {
        <h1>We Don't have Movies yet!</h1>
    }
    else
    {
      foreach (var item in Model)
 {
     <tr>
         <td>
             @Html.ActionLink(item.Name, "Details", "Movies" ,new {id=item.Id},null)
         </td>

     </tr>
 }
    }

    

</table>
